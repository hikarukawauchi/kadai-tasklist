<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklists</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>



<h1>タスク一覧</h1>

<ul>
  <% @tasklists.each do |tasklist| %>
    <li><%= link_to tasklist.id, tasklist %> : <%= tasklist.status %> &gt; <%= tasklist.content %></li>
  <% end %>
</ul>

<%= link_to '新規メッセージの投稿', new_tasklist_path %>
